    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "Server",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "preLaunchTask": "npm: db:upd",
            "postDebugTask": "npm: db:stop",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "./index.js",
            "__workspaceFolder": "."
        },
    ]
}